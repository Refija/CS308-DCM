<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id = "adrs" class = "tarik.Address">
      <property name = "city" value = "Sarajevo"/>
      <property name = "country" value = "Bosnia and Herzegovina"/>
      <property name = "zipCode" value = "71000"/>
   </bean>
   <bean id = "adrs2" class = "tarik.Address">
      <property name = "city" value = "Ilidja"/>
      <property name = "country" value = "Bosnia and Herzegovina"/>
      <property name = "zipCode" value = "71002"/>
   </bean>
   
   <bean id = "doc1" class = "tarik.Doctor" init-method="myInit" destroy-method="myDestroy">
      <property name = "id" value = "1"/>
      <property name = "firstName" value = "John"/>
      <property name = "lastName" value = "Doe"/>
      <constructor-arg ref="adrs"/>
   </bean>
   
   <bean id = "doc2" class = "tarik.Doctor">
      <property name = "id" value = "2"/>
      <property name = "firstName" value = "Omer"/>
      <property name = "lastName" value = "Bitch"/>
      <constructor-arg ref="adrs2"/>
   </bean>

</beans>